{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build (c)",
            "type": "shell",
            "command": "cc",
            "args": [
                "-g",
                "-I${workspaceFolder}/include",
                "${workspaceFolder}/source/*.c",
                "-o",
                "${workspaceFolder}/parkhaus_sim"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build (c++)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++20",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}